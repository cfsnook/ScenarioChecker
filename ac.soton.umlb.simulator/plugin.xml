<plugin>

<!-- this category (and others?) should probabbly be moved to a separate common feature fir UML-B-->
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ac.soton.umlb.viewCategory"
            name="UML-B">
      </category>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <view
            category="ac.soton.umlb.viewCategory"
            class="ac.soton.umlb.internal.simulator.views.SimulatorView"
            id="ac.soton.umlb.simulator.SimulatorView"
            name="%simViewName">
      </view>
   </extension>
      <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:fr.systerel.explorer.navigator.view">
         <menu
               id="ac.soton.umlb.ui.simulationMenu"
               label="%simulationMenu"
               mnemonic="%simulationMenuMnemonic"
               tooltip="%simulationMenuTooltip">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="ac.soton.umlb.ui.SingleMachineRootSelected">
               </reference>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ac.soton.umlb.ui.SingleMachineRootSelected">
         <with
               variable="selection">
            <and>
               <count
                     value="1">
               </count>
               <iterate
                     operator="and">
                  <instanceof
                        value="org.eventb.core.IMachineRoot">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
   </extension>
<!-- END  of stuff that should be elsewhere-->

<!-- new command based menu handler -->
  <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="ac.soton.eventb.emf.diagrams.iUMLB"
            description="%simulateCommandDescription"
            id="ac.soton.umlb.simulator.simulateCommand"
            name="%simulateCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.umlb.internal.simulator.handlers.SimulateHandler"
            commandId="ac.soton.umlb.simulator.simulateCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:ac.soton.umlb.ui.simulationMenu">
         <command
               commandId="ac.soton.umlb.simulator.simulateCommand"
               label="%simulateCommandLabel"
               mnemonic="S"
               style="push"
               tooltip="%simulateCommandTooltip">
         </command>
      </menuContribution>
   </extension>
<!-- end of new menu handler -->



   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ac.soton.umlb.internal.simulator.perspectives.SimPerspective"
            icon = "icons/umlb.png"
            id="ac.soton.umlb.simulator.simPerspective"
            name="%simPerspectiveName">
      </perspective>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ac.soton.umlb.simulator.simPerspective">
         <view
               closeable="true"
               id="ac.soton.umlb.simulator.SimulatorView"
               minimized="false"
               moveable="true"
               ratio="0.6f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.prob.ui.HistoryView"
               minimized="false"
               moveable="true"
               ratio="0.8f"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.prob.ui.StateView"
               minimized="false"
               moveable="true"
               ratio="0.6f"
               relationship="right"
               relative="ac.soton.umlb.simulator.SimulatorView"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.prob.ui.OperationView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="de.prob.ui.HistoryView"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.prob.ui.EventErrorView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="de.prob.ui.OperationView"
               visible="true">
         </view>
         <view
               closeable="true"
               id="fr.systerel.explorer.navigator.view"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="de.prob.ui.OperationView"
               visible="true">
         </view>
         
         <viewShortcut
               id="ac.soton.umlb.simulator.SimulatorView">
         </viewShortcut>
         <viewShortcut
               id="fr.systerel.explorer.navigator.view">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.HistoryView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.StateView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.OperationView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.EventErrorView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.ltl.CounterExampleView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.TemplogView">
         </viewShortcut>
         <viewShortcut
               id="de.prob.ui.log">
         </viewShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
